<?xml version="1.0" encoding="utf-8" ?>
<!--Определяет страницу с контентом-->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Личный кабинет" BackgroundColor="White"
             x:Class="Barbershop2.PersonalPage">
    <!--Определяет контент страницы-->
    <ContentPage.Content>
        <!--Создает вертикальный контейнер для размещения контента-->
        <StackLayout VerticalOptions="FillAndExpand" Padding="20">
            <Label Text="Личные данные:" FontSize="22" FontAttributes="Bold" TextColor="Black"/>
            <!--Отображают данные со страницы MainPage-->
            <Label x:Name="nameLabel" Text="" FontSize="18" TextColor="Black" TextDecorations="Underline"/>
            <Label x:Name="emailLabel" Text="" FontSize="18" TextColor="Black" TextDecorations="Underline"/>
            <Label x:Name="passwordLabel" Text="" FontSize="18" TextColor="Black" TextDecorations="Underline"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>